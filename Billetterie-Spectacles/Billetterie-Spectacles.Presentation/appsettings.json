{
  // ConnectionStrings et JwtSettings.SecretKey sont fournis via :
  // - Development : User Secrets (dotnet user-secrets)
  // - Production : Azure App Service Configuration

  "PaymentService": {
    "BaseUrl": "https://localhost:7049"
  },
  "JwtSettings": {
    "Issuer": "BilletterieAPI",
    "Audience": "BilletterieClients",
    "ExpirationMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
